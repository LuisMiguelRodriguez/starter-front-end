<div class="container">
  <div class="col-md-12">
    {{#each articles}}
      <div class="row">

        <div class="panel panel-primary">
            <!-- Default panel contents -->
          <form action="/removeArticle" method="post">
            <input type="hidden" name="_id" value="{{_id}}">
            <div class="panel-heading">{{title}} <button formaction="/removeArticle" class="btn btn-danger pull-right" type="submit" value="save" name="save">DELETE FROM SAVED</button>
                                                 <button data-toggle="modal" data-target="#myModal{{_id}}" class="btn btn-success pull-right" type="button">ARTICLE NOTES</button>

              <div class="panel-body">
               <p> <a href="{{link}}"> {{title}}</a> </p>
               <p>{{description}}</p>
              </div>

              <!-- Modal -->
              <div id="myModal{{_id}}" class="modal fade" role="dialog">
                <div class="modal-dialog">

                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Notes For: {{_id}}</h4>
                    </div>
                    <form  method="post">
                      <div class="modal-body">

                        {{#each notes}}

                          <div class="panel panel-default">
                            <div class="panel-body">
                              note: {{this}}
                            </div>
                          </div>

                        {{/each }}

                        <input type="text" name="text"class="form-control" placeholder="Type note here......."/>

                      </div>

                      <div class="modal-footer">
                        <button formaction="/note" type="submit" class="btn btn-default">Save Note</button>

                      </div>
                    </form>

                  </div>

                </div>
              </div>

            </div>
          </form>
        </div>

        </div>

    {{/each}}
  </div>

  <hr>
</div> <!-- /container -->
